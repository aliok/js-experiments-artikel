<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd"
       xmlns:aop="http://www.springframework.org/schema/aop"
       default-lazy-init="true">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <jaxrs:server id="mobileServices" address="/mobileServices">
        <jaxrs:serviceBeans>
            <ref bean="wordService"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>


    <bean id="wordService" class="tr.com.aliok.jsExperiments.service.impl.WordServiceImpl">
        <property name="wordBook" ref="wordBook"/>
    </bean>

    <bean id="wordBook" class="tr.com.aliok.jsExperiments.service.WordBook">
    </bean>

</beans>